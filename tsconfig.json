{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",          // Output CJS
    "moduleResolution": "Node",    // CJS resolution
    "outDir": "js",
    "esModuleInterop": true,       // Allows `import x from "x"` syntax with CJS modules
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "index.d.ts"]
}
